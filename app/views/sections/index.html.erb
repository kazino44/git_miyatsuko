<h2 data-component='base/h2' class='contenteditable'>部署一覧</h2>
<table class='table' data-component='data_set/table'>
  <thead>
    <tr>
      <th class='contenteditable'>部署名</th>
      <th class='contenteditable'></th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| -%>
<tr data-iterator='sections'>
      <td data-name='section.sec_name'><%= section.sec_name %></td>
      <td class='operation x-content'>
        <%= link_to("表示", section_path(section), class: "btn btn-sm btn-default contenteditable" , "data-component" => "data/link") %>
        <a class='btn btn-sm btn-default contenteditable' href='' data-component='data/link'>編集</a>
        <a class='btn btn-sm btn-default contenteditable' href='' rel='nofollow' data-method='delete' data-confirm='Are you sure?' data-component='data/link'>削除</a>
      </td>
    </tr><% end -%>
  </tbody>
</table><a class='btn btn-sm btn-default contenteditable' href='' data-component='base/anchor'>新規部署登録</a>